
#include<iostream>
using namespace std;

int main(){

    int* p;
    int i,n,j;
    
    cout<<"length of array: ";
    cin>>n;
    p = new int[n];
    
    j = 0;
    for(i = 0; i < n; i = i + 1){

        if(i % 2 != 0){//checking whether odd or not
            p[j] = i ;
            j = j +1;
        }
    }
//printing the dynamic array
    for(i = 0; i < j; i = i + 1){
        cout<<"p["<<i<<"]: "<<p[i]<<endl;
    }
    cout<<"size of array: "<<sizeof(p)/sizeof(p[0])<<endl;//size of array
    delete[] p;
    
    return 0;
    
}
